<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- ================= SCROLL PRINCIPAL ================= -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/footer"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- IMAGEN SUPERIOR -->
            <ImageView
                android:id="@+id/imgSettingsTop"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerInside"
                android:src="@drawable/confi"
                android:layout_marginBottom="24dp" />

            <!-- TÍTULO -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sobre Zappy"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="24dp" />

            <!-- Misión y Visión -->
            <LinearLayout
                android:id="@+id/optionMissionVision"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Misión y Visión"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Misión: Desarrollar una aplicación educativa y práctica para el curso de Desarrollo de Aplicaciones Móviles.\n\nVisión: Ser una herramienta innovadora que apoye el aprendizaje de los estudiantes y facilite la creación de contenido digital."
                    android:textSize="14sp"
                    android:textColor="#333333" />
            </LinearLayout>

            <!-- Acerca de la app -->
            <LinearLayout
                android:id="@+id/optionAbout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Acerca de la App"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Esta aplicación fue creada en 2025 para el curso de Desarrollo de Aplicaciones Móviles. Permite a los estudiantes explorar y crear cómics y novelas gráficas de forma interactiva."
                    android:textSize="14sp"
                    android:textColor="#333333" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- ================= FOOTER ================= -->
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#FFE5DE"
        android:gravity="center"
        android:weightSum="2">

        <!-- Botón Volver -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="← Volver"
            android:textColor="#E66A5A"
            android:backgroundTint="#FFFFFF"
            android:background="@drawable/btn_outline_red"
            android:elevation="0dp" />

        <Space
            android:layout_width="8dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Cerrar sesión"
            android:textColor="#FFFFFF"
            android:backgroundTint="#E66A5A" />
    </LinearLayout>
</RelativeLayout>

