<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0A0A"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- ================= HEADER ================= -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="⚡ Zappy Comics"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#F56DF0"
            android:fontFamily="sans-serif-medium" />

        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="#FFFFFF"
            android:src="@android:drawable/ic_menu_manage"
            android:contentDescription="Configuración" />
    </LinearLayout>

    <!-- ================= TITULOS ================= -->
    <TextView
        android:id="@+id/tvCreate"
        android:layout_below="@id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crea tu historia"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="6dp" />

    <TextView
        android:id="@+id/tvSub"
        android:layout_below="@id/tvCreate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descubre y comparte tus cómics favoritos"
        android:textSize="14sp"
        android:textColor="#C4C4C4"
        android:layout_marginBottom="20dp" />

    <!-- ================= BOTÓN PRINCIPAL ================= -->
    <Button
        android:id="@+id/btnCreateComic"
        android:layout_below="@id/tvSub"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:text="+ Crear Nuevo Cómic"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:backgroundTint="#A020F0"
        android:elevation="6dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="sans-serif-medium" />

    <!-- ================= LISTA ================= -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvComics"
        android:layout_below="@id/btnCreateComic"
        android:layout_above="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:clipToPadding="false"
        android:layout_marginBottom="12dp"
        android:scrollbars="vertical" />

    <!-- ================= BOTTOM BAR ================= -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#1A1A1A"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        android:elevation="8dp">

        <ImageButton
            android:id="@+id/navHome"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:tint="#F56DF0"
            android:src="@android:drawable/ic_menu_view"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:contentDescription="Inicio" />

        <Space
            android:layout_width="32dp"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/navUpload"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:tint="#FF85FF"
            android:src="@android:drawable/ic_input_add"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:contentDescription="Subir" />

        <Space
            android:layout_width="32dp"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/navProfile"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:tint="#C77DFF"
            android:src="@android:drawable/ic_menu_myplaces"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:contentDescription="Perfil" />
    </LinearLayout>

</RelativeLayout>


